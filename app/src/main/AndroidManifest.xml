<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nishantboro.splititeasy">

    <application
        android:name=".AmplifyApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InvestmentPlan"></activity>
        <activity android:name=".ViewPlan" />
        <activity
            android:name=".Investment"
            android:label="@string/title_activity_investment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".Cashback" />
        <activity android:name=".AccountPage" />
        <activity android:name=".EmailConfirmationActivity" />
        <activity android:name=".Register" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".FeatureScreen" />
        <activity android:name=".BillSplit" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="filter_view_example">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "https://www.splititeasy.comâ€ -->
                <data
                    android:host="www.splititeasy.com"
                    android:scheme="https" />
                <!-- note that the leading "/" is required for pathPrefix -->
            </intent-filter>
        </activity>
        <activity android:name=".AddEditMemberActivity" />
        <activity android:name=".AddEditBillActivity" />
        <activity android:name=".HandleOnGroupClickActivity" />
        <activity android:name=".GroupListActivity" />
        <activity android:name=".CreateNewGroupActivity" />
    </application>

</manifest>